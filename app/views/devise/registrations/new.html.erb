	<div id="registration" class="reglog sign_in">
		<h1>Sign Up</h1>
		<h4>Already have an account?  <a href="/users/sign_in">Login Here</a></h4>
		<hr />
		<div id="register_container" class="form_container span-8 right">
			<p>No Facebook? Fill out the fields below:</p>
			<%= form_for(Profile.new) do |f| %>
				<div>
					<label for="firstName">First Name</label>
					<%= f.text_field :first_name %>
				</div>
				
				<div>
					<label for="lastName">Last Name</label>
                                        <%= f.text_field :last_name %>
				</div>
                                <%= fields_for(User.new) do |u| %>
				   <div>
					<label for="email">E-Mail</label>
                                        <%= u.text_field :email %>
				   </div>

				   <div>
					<label for="password">Password</label>
                                        <%= u.password_field :password %>
				   </div>
                                <% end %>
				<div align="center">
                                  <%= f.submit :Register %>
				</div>
			<% end %>
				
		</div>
	</div>
